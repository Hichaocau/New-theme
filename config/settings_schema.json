    {
      "name": "t:settings_schema.colors.name",
      "settings": [
        {
          "type": "color",
          "id": "page_bg",
          "default": "#0F0051",
          "label": "t:settings_schema.colors.settings.page_background.label"
        },
        {
          "type": "color",
          "id": "primary_color",
          "default": "#27EFB7",
          "label": "t:settings_schema.colors.settings.primary_color.label"
        },
        {
          "type": "color",
          "id": "secondary_color",
          "default": "#0F0051",
          "label": "t:settings_schema.colors.settings.secondary_color.label"
